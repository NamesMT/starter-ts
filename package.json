{
  "name": "starter-ts",
  "type": "module",
  "version": "0.1.0",
  "packageManager": "pnpm@9.8.0",
  "description": "",
  "author": "NamesMT <dangquoctrung123@gmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/namesmt",
  "homepage": "https://github.com/namesmt/starter-ts#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/namesmt/starter-ts.git"
  },
  "bugs": "https://github.com/namesmt/starter-ts/issues",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    }
  },
  "source": "./src/index.ts",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.13.1"
  },
  "scripts": {
    "start": "NODE_ENV=dev tsx src/index.ts",
    "watch": "NODE_ENV=dev tsx watch src/index.ts",
    "stub": "unbuild --stub",
    "dev": "pnpm run watch",
    "play": "pnpm run stub && pnpm run --filter playground dev",
    "play:useBuild": "pnpm run build && pnpm run --filter playground dev",
    "lint": "eslint .",
    "test": "vitest",
    "test:types": "tsc --noEmit --skipLibCheck",
    "check": "pnpm lint && pnpm test:types && vitest run --coverage",
    "build": "unbuild",
    "release": "pnpm dlx changelogen@latest --release --push --publish",
    "prepare": "simple-git-hooks",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.27.1",
    "@namesmt/utils": "^0.5.3",
    "@types/node": "^20.16.1",
    "@vitest/coverage-v8": "^2.0.5",
    "consola": "^3.2.3",
    "eslint": "^9.9.1",
    "lint-staged": "^15.2.9",
    "simple-git-hooks": "^2.11.1",
    "std-env": "^3.7.0",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "unbuild": "^2.0.0",
    "vitest": "^2.0.5"
  },
  "pnpm": {
    "overrides": {
      "is-core-module": "npm:@nolyfill/is-core-module@^1"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
